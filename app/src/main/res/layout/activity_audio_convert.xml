<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools">
    <data>
        <variable
            name="activity"
            type="com.tzh.myapplication.ui.activity.tool.AudioConvertActivity" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_fff">
        <com.tzh.baselib.view.title.XAppTitleBar
            android:id="@+id/title_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:xtbTitleText="音频转换"
            android:background="@color/color_fff"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            app:layout_constraintTop_toBottomOf="@+id/title_bar"
            app:layout_constraintBottom_toBottomOf="parent">

            <com.tzh.baselib.shapeview.ShapeTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提取伴奏"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@color/color_000"/>
            <com.tzh.baselib.shapeview.ShapeImageView
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:paddingVertical="20dp"
                android:src="@mipmap/icon_music"
                app:shapeBackgroundColor="@color/color_f7f7f7"
                app:shapeCorners="8dp"
                android:layout_marginTop="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal"
                android:gravity="center">

                <com.tzh.baselib.shapeview.ShapeImageView
                    android:id="@+id/btnPlay"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="8dp"
                    android:src="@mipmap/icon_play"
                    android:tint="@color/color_fff"
                    app:shapeBackgroundColor="@color/color_00f3b8"
                    app:shapeCorners="32dp"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00"
                    android:textSize="14sp"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/color_333"/>

                <androidx.appcompat.widget.AppCompatSeekBar
                    android:id="@+id/seekBar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:layout_constraintTop_toTopOf="parent"
                    android:max="100"
                    android:progress="0"
                    android:thumb="@drawable/custom_thumb"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tool:text="00:00"
                    android:textSize="14sp"
                    android:textColor="@color/color_333"/>
            </LinearLayout>
            <com.tzh.baselib.shapeview.ShapeLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.tzh.baselib.shapeview.ShapeTextView
                    android:id="@+id/tv_share"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    app:shapeBackgroundColor="@color/color_00f3b8"
                    app:shapeCorners="12dp"
                    android:gravity="center"
                    android:text="分享"
                    android:textColor="@color/color_fff"/>
                <com.tzh.baselib.shapeview.ShapeTextView
                    android:id="@+id/tv_save"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:layout_marginStart="20dp"
                    app:shapeBackgroundColor="@color/color_00f3b8"
                    app:shapeCorners="12dp"
                    android:gravity="center"
                    android:text="保存"
                    android:textColor="@color/color_fff"/>
            </com.tzh.baselib.shapeview.ShapeLinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>