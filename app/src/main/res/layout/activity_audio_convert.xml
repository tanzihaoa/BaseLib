<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="activity"
            type="com.tzh.myapplication.ui.activity.tool.AudioConvertActivity" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_f7f7f7">
        <com.tzh.baselib.view.title.XAppTitleBar
            android:id="@+id/title_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:xtbTitleText="音频转换"
            android:background="@color/color_fff"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/title_bar"
            app:layout_constraintBottom_toTopOf="@+id/tv_start">

            <com.tzh.baselib.shapeview.ShapeLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:shapeBackgroundColor="@color/color_fff"
                app:shapeCorners="12dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="10dp"
                android:paddingHorizontal="16dp"
                android:paddingVertical="20dp"
                android:orientation="vertical">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请选择音频格式"
                    android:textColor="@color/color_333"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycle_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"/>
            </com.tzh.baselib.shapeview.ShapeLinearLayout>
        </LinearLayout>
        <com.tzh.baselib.shapeview.ShapeTextView
            android:id="@+id/tv_start"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="16dp"
            app:shapeBackgroundColor="@color/color_FF666B"
            app:shapeCorners="12dp"
            android:onClick="@{()->activity.startConvert()}"
            android:gravity="center"
            android:text="开始转换"
            android:textColor="@color/color_fff"
            android:textSize="16sp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>