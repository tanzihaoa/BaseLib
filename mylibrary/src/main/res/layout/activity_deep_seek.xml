<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="activity"
            type="com.tzh.baselib.activity.tool.DeepSeekActivity" />
    </data>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">
        <com.tzh.baselib.view.title.XAppTitleBar
            android:id="@+id/title_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:xtbTitleText="对话"/>

        <com.tzh.baselib.shapeview.ShapeEditText
            android:id="@+id/et_text_1"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_margin="20dp"
            android:padding="10dp"
            android:maxLength="100"
            app:shapeBorderWidth="1dp"
            app:shapeBorderColor="@color/color_999"
            app:shapeCorners="12dp"
            android:hint="请输入内容"
            android:inputType="textMultiLine"/>
        <com.tzh.baselib.shapeview.ShapeTextView
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginHorizontal="20dp"
            app:shapeBackgroundColor="@color/color_00f3b8"
            app:shapeCorners="12dp"
            android:gravity="center"
            android:text="问他"
            android:onClick="@{()->activity.translate()}"
            android:textColor="@color/color_fff"
            android:textSize="16sp"
            android:textStyle="bold"/>
        <com.tzh.baselib.shapeview.ShapeEditText
            android:id="@+id/et_text_2"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_margin="20dp"
            android:padding="10dp"
            android:inputType="textMultiLine"
            app:shapeBorderWidth="1dp"
            app:shapeBorderColor="@color/color_999"
            app:shapeCorners="12dp"/>
    </LinearLayout>
</layout>